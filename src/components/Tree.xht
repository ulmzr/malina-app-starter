         cursor: pointer;
         transition: padding .25s ease-in-out;
         > i {
            width: 1em;
            transition: width .25s ease-in-out;
         }
      }
      a:not([href]) > i:empty::before{
         content: "üìÇ"
      }
      a:is([close],[href]) > i:empty::before{
         content: "üìÅ"
      }
      a[href] > i:empty::after{
         content: "üåè";
         font-size: .6em;
